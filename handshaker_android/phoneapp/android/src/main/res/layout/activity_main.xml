<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weezlabs.handshakerphone.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/stat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/today_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:arc_progress="55"
                    custom:arc_unfinished_color="@android:color/white"
                    custom:arc_finished_color="@android:color/holo_blue_light"
                    custom:arc_text_color="@android:color/holo_blue_dark"
                    custom:arc_text_size="16dp"
                    custom:arc_bottom_text="today"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/week_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:arc_progress="55"
                    custom:arc_unfinished_color="@android:color/white"
                    custom:arc_finished_color="@android:color/holo_green_light"
                    custom:arc_text_color="@android:color/holo_green_dark"
                    custom:arc_text_size="16dp"
                    custom:arc_bottom_text="week"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/month_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:arc_progress="55"
                    custom:arc_unfinished_color="@android:color/white"
                    custom:arc_finished_color="@android:color/holo_orange_light"
                    custom:arc_text_color="@android:color/holo_orange_dark"
                    custom:arc_text_size="16dp"
                    custom:arc_suffix_text=""
                    custom:arc_bottom_text="month"/>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/attempts_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@id/stat_layout"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>

</LinearLayout>